@using TypographyShopBusinessLogic.ViewModels
@model List<StoreViewModel>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Склады</h1>
</div>
<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Авторизируйтесь</h3>
            return;
        }
        <p>
            <a asp-action="Add">Создать склад</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Название склада
                    </th>
                    <th>
                        ФИО ответственного
                    </th>
                    <th>
                        Дата создания
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.StoreName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResponsibleName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateCreation)
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-storeId="@item.Id" asp-route-name="@item.StoreName" asp-route-responsible="@item.ResponsibleName">Изменить</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
</div>
